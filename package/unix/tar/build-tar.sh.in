set -e

ROOT_DIR=${DOXYREST_B_ROOT_DIR}
OUT_DIR=${DOXYREST_B_PACKAGE_DIR}
TAR_DIR=${CMAKE_CURRENT_BINARY_DIR}/tar
TAR_SUB_DIR=doxyrest_b-${DOXYREST_VERSION_FILE_SUFFIX}
CONTENTS_DIR=$TAR_DIR/$TAR_SUB_DIR
OUT_FILE_NAME=doxyrest_b-src-${DOXYREST_VERSION_FILE_SUFFIX}.tar.xz
OUT_FILE_PATH=$OUT_DIR/$OUT_FILE_NAME

echo Building archive $OUT_FILE_NAME...

rm -rf $TAR_DIR
rm -f $OUT_FILE_PATH

mkdir -p $CONTENTS_DIR/axl
mkdir -p $CONTENTS_DIR/doxyrest
mkdir -p $CONTENTS_DIR/package

cp -rf $ROOT_DIR/axl $CONTENTS_DIR
cp -rf $ROOT_DIR/doxyrest $CONTENTS_DIR
cp -rf $ROOT_DIR/package $CONTENTS_DIR
cp -f $ROOT_DIR/CMakeLists.txt $CONTENTS_DIR
cp -f $ROOT_DIR/dependencies.cmake $CONTENTS_DIR

rm -f $CONTENTS_DIR/axl/.git*
rm -f $CONTENTS_DIR/doxyrest/.git*

chown -R root:$(id -gn root) $TAR_DIR
tar -cJf $OUT_FILE_PATH -C $TAR_DIR $TAR_SUB_DIR
rm -rf $TAR_DIR
